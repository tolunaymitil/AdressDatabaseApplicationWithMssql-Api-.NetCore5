
<div class="container">
    <div class="row py-5">
        <div class="col-2 bg-light border text-center p-3">
            <div>
                <a href="/Person/PersonAdd" class="btn btn-primary read-m">Kişi Ekle</a>
            </div>
            <br />
            <button class="btn btn-warning mb-3" id="search_Btn">Search</button>
            <div class="form-group">
                <label class="text-muted">FullName</label>
                <input type="text" class="form-control" id="search_Fullname" placeholder="Full Name" />
            </div>
            <div class="form-group">
                <label class="text-muted">Gender</label>
                <select class="form-control" id="search_Gender">
                    <option value="0">Select Gender</option>
                    <option value="1">Man</option>
                    <option value="2">Woman</option>
                </select>
            </div>
            <div class="form-group">
                <label class="text-muted">Birth Date</label>
                <input type="date" class="form-control" id="search_BirthDate" />
            </div>
            <div class="form-group">
                <label class="text-muted">Email</label>
                <input type="text" class="form-control" id="search_Email" />
            </div>
            <div class="form-group">
                <label class="text-muted">Phone</label>
                <input type="text" class="form-control" id="search_Phone" />
            </div>
            <div class="form-group">
                <label class="text-muted">Whatsapp</label>
                <input type="text" class="form-control" id="search_Whatsapp" />
            </div>
            <div class="form-group">
                <label class="text-muted">City</label>
                <select class="form-control" id="search_City">
                </select>
            </div>
            <div class="form-group">
                <label class="text-muted">County</label>
                <select class="form-control" id="search_County">
                </select>
            </div>
            <div class="form-group">
                <label class="text-muted">DenemeText</label>
                <input type="text" class="form-control" id="search_Deneme" placeholder="Deneme" />
            </div>
            <button class="btn btn-primary mb-3" id="search_Btnexit">Exit</button>
        </div>
       
        

        <div class="col-10">
            <table class="table" id="personTable">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Birth Date</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Addresses</th>
                        <th scope="col">Contacts</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
            <div class="row">
                <div class="col-10">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-2">
                    <select class="form-control" id="takePersonTableItem">
                        <option value="">Select Take Item</option>
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="100">100</option>
                    </select>
                </div>
            </div>
            <table class="table" id="addressTable">
                <thead>
                    <tr>
                        <th scope="col">PersonID</th>
                        <th scope="col">City</th>
                        <th scope="col">County</th>
                        <th scope="col">Full Addresss</th>

                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>

        </div>

    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/Pages/PersonPage.js"></script>
}